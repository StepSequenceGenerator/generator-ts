{
  "name": "step-sequence-generator",
  "version": "1.0.8",
  "main": "src/index.js",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "watch": "tsc --watch",
    "dev": "npm run build && npm run start",
    "lint": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:details": "vitest --reporter verbose",
    "clean-dist": "rm -r ./dist",
    "prepare-publish": "node prepare-publish.js",
    "publish:patch": "git add . && git commit -m 'fix' &&  npm version patch && npm run clean-dist && npm run build && npm run prepare-publish && npm publish ./dist"
  },
  "keywords": [
    "figure skating",
    "sequence generator",
    "choreography",
    "ice skating"
  ],
  "author": "Pulin Tim",
  "license": "ISC",
  "description": "A step sequence generator for figure skating programs",
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "@vitest/coverage-v8": "^3.1.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-packagejson": "^2.5.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1",
    "vitest": "^3.1.1"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "dotenv": "^16.5.0",
    "lodash": "^4.17.21",
    "xlsx": "^0.18.5"
  },
  "engines": {
    "node": ">=22"
  }
}
